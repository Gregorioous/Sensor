<resources>
    <!-- Base application theme. -->
    <style name="Theme.Sensor" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Customize your theme here. -->

        <item name="drawerArrowStyle">@style/ArrowHamburgerStyle</item>
        <item name="toolbarStyle">@style/StyleOverwrite.Toolbar</item>
    </style>

    <!-- Toolbar Style -->
    <style name="StyleOverwrite.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextOverwrite.Toolbar.Title</item>
    </style>

    <style name="TextOverwrite.Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ArrowHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/drawer_tint</item>
    </style>

    <style name="StyleOverwrite.CardView" parent="Widget.Material3.CardView.Elevated">
        <!--<item name="cardBackgroundColor">@color/cardBackgroundColor</item>-->
        <item name="rippleColor">@color/primary</item>
    </style>
</resources>